---
import youtubeBanner from "../../assets/images/banner_kurz_youtube.png";
import twitchBanner from "../../assets/images/banner_kurz_twitch.png";
import tiktokLogo from "../../assets/images/TikTok.png";
import tiktokBanner from "../../assets/images/banner_kurz_tiktok.png";
import Twitch from "../icons/Twitch.astro";
import YouTube from "../icons/YouTube.astro";
import TikTok from "../icons/TikTok.astro";

interface Props {
  media: string;
  name: string;
  url: string;
  follower: number;
  colorTrans: string;
  color: string;
}

const { media, name, url, follower, colorTrans, color } = Astro.props;
---

<a href={url} class="panel" target="_blank">
  <div class="container">
    <div class="head">
      {
        media === "YouTube" && (
          <>
            <YouTube class="logo" />
            <img src={youtubeBanner} class="banner" />
          </>
        )
      }
      {
        media === "Twitch" && (
          <>
            <Twitch class="logo" />
            <img src={twitchBanner} class="banner" />
          </>
        )
      }
      {
        media === "TikTok" && (
          <>
            <img src={tiktokLogo} class="logo" />
            <img src={tiktokBanner} class="banner" />
          </>
        )
      }
    </div>

    <div class="bottom">
      <div class="description">
        <h3 class="name">{name}</h3>
        <p class="subscriber">Follower: {follower}</p>
      </div>
      <div class="penis">
        {
          media === "YouTube" && (
            <>
              <YouTube class="logoUnten" />
            </>
          )
        }
        {
          media === "Twitch" && (
            <>
              <Twitch class="logoUnten" />
            </>
          )
        }
        {
          media === "TikTok" && (
            <>
              <TikTok class="logoUnten" />
            </>
          )
        }
      </div>
    </div>
  </div>
</a>

<style define:vars={{ colorTrans, color }}>
  .container {
    width: 350px;
    margin: 15px;
    padding: 0px 0px 10px 0px;
    text-align: center;
    border-radius: 7px;
    background-color: var(--colorTrans);
    filter: drop-shadow(0 0 0.3rem rgba(0, 0, 0, 0.2));
  }

  .container:hover {
    scale: 1.1;
    transition: scale 0.3s ease-in-out;
  }

  .container:hover .banner {
    opacity: 100%;
    filter: blur(0);
    transition: scale 0.5s ease-in-out;
  }

  .container:hover .logo {
    opacity: 0%;
  }

  .container:hover .logoUnten {
    display: block;
    margin-left: 2em;
    color: white;
  }

  .container:hover .bottom {
    display: flex;
  }

  .container:hover .name {
    text-align: left;
  }

  .container:hover .subscriber {
    text-align: left;
  }

  .container:hover .description {
    margin-right: 2em;
  }

  .head {
    position: relative;
    border-radius: 7px;
    overflow: hidden;
  }

  .logo {
    width: 60px;
    max-height: 60px;
    position: absolute;
    z-index: 10;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    filter: drop-shadow(0 0 0.3rem black);
    color: var(--color);
  }

  .banner {
    width: 100%;
    object-fit: cover;
    opacity: 60%;
    filter: blur(2px);
  }

  .name {
    margin: 1em 0;
    color: white;
  }

  .subscriber {
    margin: 1em 0;
    color: white;
  }

  .logoUnten {
    width: 60px;
    max-height: 60px;
    display: none;
    color: var(--color);
  }

  .penis {
    display: flex;
    align-items: center;
  }

  .bottom {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    filter: drop-shadow(0 0 0.3rem rgba(0, 0, 0, 0.5));
  }
</style>
