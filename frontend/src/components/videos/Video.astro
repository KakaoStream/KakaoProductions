---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<a href={`https://www.youtube.com/watch?v=${id}`} target="_blank">
  <li class="video">
    <div class="title">{title}</div>
    <img
      height="100%"
      width="100%"
      class="thumbnail"
      src={`https://img.youtube.com/vi/${id}/maxresdefault.jpg`}
      alt={title}
    />
  </li>
</a>

<style>
  .thumbnail {
    object-fit: cover;
  }

  .video {
    height: 100px;
    width: 178px;
    margin: 15px;
    border-radius: 7px;
    overflow: hidden;
    filter: drop-shadow(0 4px 3px rgb(0 0 0 / 0.07))
      drop-shadow(0 2px 2px rgb(0 0 0 / 0.06));
    position: relative;
  }

  .video:hover {
    scale: 1.7;
    z-index: 20;
    transition: scale 0.3s ease-in-out;
  }

  .title {
    position: absolute;
    font-family: "Roboto", sans-serif;
    font-size: 14px;
    font-weight: bold;
    line-height: 1.3;
    width: 100%;
    height: 100%;
    padding: 10px;
    opacity: 0;
    background-color: #55555588;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    filter: drop-shadow(0 0 0.3rem black);
  }

  .video:hover .title {
    opacity: 1;
    transition: opacity 0.2s ease-in-out;
  }
</style>
