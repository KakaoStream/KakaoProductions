---
import portfolio from "../../assets/portfolio.json";
import Video from "./Video.astro";
---

<ul class="video-list">
  {portfolio.map((video) => <Video id={video.id} title={video.title} />)}
</ul>

<style>
  .video-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    height: 525px;
    overflow-y: scroll;
    padding: 1.5em 0;
  }

  .video-list::-webkit-scrollbar {
    width: 10px;
  }

  .video-list::-webkit-scrollbar-thumb {
    background: #fff0de;
    border-radius: 10px;
  }

  .video-list::-webkit-scrollbar-thumb:hover {
    background: #ffdfbc;
  }
</style>
